<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margSide"
        android:layout_marginRight="@dimen/margSide"
        android:layout_marginTop="21dp"
        android:layout_weight="1"
        android:background="@drawable/radius_bg_38"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_keystore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="3dp"
                android:text="0x8d8812b72d1e4ffCeC158D25f56748b7d67c1e78"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normalText"
                />

        </ScrollView>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_copy_keystore"
        style="@style/SubmitBtnStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="20dp"
        android:text="@string/copy_keystore"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"/>


</LinearLayout>
