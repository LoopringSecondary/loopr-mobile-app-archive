<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="@dimen/margSide"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius_left_top_bg_29"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buy_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margSide"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_price"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorNineText"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat"/>

                <TextView
                    android:id="@+id/tv_buy_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margSide"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/amount_filled"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorNineText"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_buy"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margSide"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius_right_top_bg_29"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sell_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margSide"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/market_price"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorNineText"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat"/>

                <TextView
                    android:id="@+id/tv_sell_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margSide"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/amount_filled"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorNineText"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_sell"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
