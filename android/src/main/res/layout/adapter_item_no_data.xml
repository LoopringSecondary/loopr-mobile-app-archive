<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:clickable="false"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_empty_transaction"/>

    <TextView
        android:id="@+id/wallet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet_image"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/no_data_asset"
        android:textColor="@color/colorFortyWhite"
        android:textSize="@dimen/normal14Text"
        android:textStyle="bold"/>

</RelativeLayout>

