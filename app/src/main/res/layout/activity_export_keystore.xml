<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <com.tomcat360.lyqb.views.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_password"
        style="@style/editTextStyle"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:hint="@string/password"
        android:imeOptions="actionNext"
        android:maxLength="16"
        android:maxLines="1"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="@dimen/normalText"
        app:met_baseColor="@color/colorWhite"
        app:met_checkCharactersCountAtBeginning="false"
        app:met_hideUnderline="true"
        app:met_floatingLabel="none"
        app:met_helperTextColor="@color/colorWhite"
        app:met_primaryColor="@color/colorWhite" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/SubmitBtnStyle"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
</LinearLayout>
