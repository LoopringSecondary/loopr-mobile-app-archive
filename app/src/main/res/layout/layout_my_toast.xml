    android:paddingBottom="@dimen/font_5"
    android:paddingLeft="@dimen/font_5"
    android:paddingRight="@dimen/font_5" >

    <ImageView
        android:id="@+id/icon_imageview"
        android:layout_width="32dp"
        android:layout_height="32dp"
