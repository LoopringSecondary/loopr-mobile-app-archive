<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_bg2_pressed"
                android:clickable="true"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:src="@mipmap/icon_trades"/>

    <TextView
        android:id="@+id/wallet_symbol"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/stroke_token_bg"
        android:gravity="center"
        android:textColor="@color/colorToken"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <RelativeLayout
        style="@style/WrapMatch"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/wallet_image"
        android:gravity="center_vertical"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/wallet_title"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:text="LRC"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wallet_name"
            style="@style/WrapWrap"
            android:layout_below="@+id/wallet_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:text="Loopring"
            android:textColor="@color/colorFortyWhite"
            android:textSize="13sp"/>

    </RelativeLayout>

    <RelativeLayout
        style="@style/WrapMatch"
        android:layout_alignParentRight="true"
        android:layout_marginRight="49dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wallet_money"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2335.2211"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wallet_count"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/wallet_money"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:text="39,222.01"
            android:textColor="@color/colorFortyWhite"
            android:textSize="13sp"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/icon_next"/>


</RelativeLayout>

