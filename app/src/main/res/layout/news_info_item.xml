                    android:textColor="@color/colorNineText"
                    android:textSize="11sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/lineBac"
                app:layout_constraintTop_toBottomOf="@id/ll_content"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="@dimen/margSide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_content">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.4"
                        android:src="@mipmap/icon_share"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_vertical"
                        android:text="分享"
                        android:textColor="@color/colorNineText"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_share"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>

                <!--<TextView-->
                <!--android:id="@+id/tv_comment"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:text="评论10"-->
                <!--android:textColor="@color/colorNineText"-->
                <!--android:textSize="11sp"-->
                <!--android:visibility="gone"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintLeft_toRightOf="@id/tv_share"-->
                <!--app:layout_constraintTop_toTopOf="parent"/>-->
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
