<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/wallet_item"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_bg2_pressed"
                android:clickable="true"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/icon_trades"/>

    <TextView
        android:id="@+id/wallet_symbol"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/stroke_token_bg"
        android:gravity="center"
        android:textColor="@color/colorToken"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <RelativeLayout
        style="@style/WrapMatch"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/wallet_image"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wallet_title"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:text="LRC"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal14Text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wallet_name"
            style="@style/WrapWrap"
            android:layout_below="@+id/wallet_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:text="Loopring"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"/>

    </RelativeLayout>

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/s_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:checked="false"
        android:clickable="false"
        android:switchMinWidth="20dp"
        app:kswAnimationDuration="300"
        app:kswBackColor="@drawable/switch_bg"
        app:kswThumbColor="@color/white"/>

</RelativeLayout>

