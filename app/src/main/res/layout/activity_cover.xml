<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="68dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="162dp"
        android:src="@mipmap/icon_wallet_active" />

    <TextView
        style="@style/WrapWrap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/normalText" />


    <RelativeLayout
        android:id="@+id/rl_import"
        style="@style/SubmitBtnStyle"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tv_import"
            android:src="@mipmap/icon_wallet_active" />

        <TextView
            android:id="@+id/tv_import"
            style="@style/WrapWrap"
            android:layout_centerInParent="true"
            android:text="@string/import_wallet"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_generate"
        style="@style/SubmitBtnStyle"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tv_generate"
            android:src="@mipmap/icon_wallet_active" />

        <TextView
            android:id="@+id/tv_generate"
            style="@style/WrapWrap"
            android:layout_centerInParent="true"
            android:text="@string/generate_wallet"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


</LinearLayout>
