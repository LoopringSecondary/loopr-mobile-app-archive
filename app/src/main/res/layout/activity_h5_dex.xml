<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <leaf.prod.app.views.TitleView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_share_view"
        android:layout_width="375dp"
        android:layout_height="670dp"
        android:layout_gravity="center"
        android:background="@mipmap/share_card_order"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="top"
            android:text="@string/loopring_order"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/qrcode_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/qrcode_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:background="@color/red1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TableLayout
            android:id="@+id/order_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="80dp"
            android:collapseColumns="2"
            android:shrinkColumns="0"
            android:stretchColumns="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qrcode_image">

            <TableRow android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/sell"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/sell_info"
                    android:text="0.000001 WETH"
                    android:textAlignment="textEnd"
                    android:textColor="@color/background_dark"
                    android:textSize="10sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/buy"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/buy_info"
                    android:text="100 LRC"
                    android:textAlignment="textEnd"
                    android:textColor="@color/background_dark"
                    android:textSize="10sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/expiry_date"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/valid_until"
                    android:text="12-05 17:14"
                    android:textAlignment="textEnd"
                    android:textColor="@color/background_dark"
                    android:textSize="10sp"/>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/price_A_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1 WETH "
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text=" = "
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/price_A_sell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="100000 LRC"
                        android:textAlignment="textEnd"
                        android:textColor="@color/background_dark"
                        android:textSize="10sp"/>
                </LinearLayout>
            </TableRow>

            <TableRow android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/price_B_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1 LRC "
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text=" = "
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/price_B_buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0.000001 WETH"
                        android:textAlignment="textEnd"
                        android:textColor="@color/background_dark"
                        android:textSize="10sp"/>
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="请用支持路印协议的钱包扫码交易"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_info"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="80dp"
            android:text="UP Wallet"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="58dp"
            android:text="https://upwallet.io"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView3"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/icon_share_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
