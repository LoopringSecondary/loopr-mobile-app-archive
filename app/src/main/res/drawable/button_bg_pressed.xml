<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:centerColor="@color/colorCenter" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/colorEnd" android:startColor="@color/colorStart"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorBg2"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorBg2"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>
